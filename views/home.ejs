<!-- search area -->
	<% if (typeof issearch !=='undefined' ) { %>
		<div class="product-section mt-150 mb-150">
			<div class="container">
				<div class="row">
					<div class="col-lg-8 offset-lg-2 text-center">
						<div class="section-title">
							<h3><span class="orange-text">Search</span> results</h3>
							<p>Enjoy shopping with us, save your money, buy the best quality products</p>
						</div>
					</div>
				</div>
				<div class="row">
					<% if (product.length> 0) {
						for (let i = 0; i < product.length; i++) { %>
							<div class="col-lg-4 col-md-6 text-center">
								<div class="single-product-item">
									<div class="product-image">
										<a href="/viewproductdetails/?id=<%= product[i]._id %>">
											<img src="/images/product/<%= product[i].image[0] %>" width="80%"
												height="270px" alt="">
										</a>
									</div>
									<h3><%- product[i].name %></h3>
									<h6 style="font-weight: lighter !important;">Brand : <%-product[i].brand%></h6>
									<p class="product-price">â‚¹ <%- product[i].price %> <%if(product[i].offer!==0){%> <a style="color: green !important; font-size: large;">off <%= product[i].offer%> %</a><%}%></p>
									<a href="/viewproductdetails/?id=<%= product[i]._id %>" style="width: 120px"
										class="cart-btn">Click here</a>
								</div>
							</div>
							<% } %>
								<div class="col-12 d-flex justify-content-center">
									<div class="pagination">
										<% for (let j=1; j <=totalpages; j++) { %>
											<div style="padding-left: 10px; display: inline;">
												<a href="?page=<%= j %>&key=<%= key %>" class="btn btn-secondary <% if (j === parseInt(currentpage)) { %>active<% } %>"
													style="border: none; border-radius: 5px;background-color:<%=j===parseInt(currentpage)?'orange':''%>;
															color:<%=j===parseInt(currentpage)?'white':''%>"><%=j%></a>
				                                        
											<% } %>
											</div>
									</div>
								</div>
								<% } else { %>
									<div class="col-12 d-flex justify-content-center">
										<h3 style="color: red !important;">
											<%= noitem %>
										</h3>
									</div>
									<% } %>
				</div>
			</div>
		</div>
		<% } %>
			<!-- end product section -->


			<!-- product section -->
			<div class="product-section mt-150 mb-150">
